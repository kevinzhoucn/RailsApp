:javascript
  function tabbing(b){
    var ul = document.getElementsByName("leftlist");
    var c = document.getElementsByName("content");

    for(var i=0;i<ul.length;i++){
      if(ul[i]==b){
        ul[i].className="current";
        c[i].className="show";
      }else{
        ul[i].className="";
        c[i].className="hide";
      }
    }
  }