.generalcontainer#adminbody
  #adminnav{style:""}
    %ul.horizontal
      %li
        快速导航:
      %li
        %a{href:"/admin"} 管理员首页
        >
      %li 图片轮播管理
  #basic-accordian
    #left{style:"float:left;width:25%;"}
      %ul#menu-header
        %li.current{name:"leftlist",onclick:"tabbing(this)"} 所有图片轮播
        %li{name:"leftlist",onclick:"tabbing(this);"}
          %a{href:"/admin",style:"display:block;width:100%"} 返回管理员首页
    #right{style:"float:left;width:73%;margin-right:1px"}
      #content1.show{name:"content"}
        %h2 当前所有图片轮播
        %hr
        #newslist
          - @slides.each do |slides|
            %ul.horizontal
              %li= slides.title
              %li= link_to '编辑', edit_admin_slide_path(slides)
              %li= button_to '删除', admin_slide_path(slides), :method => :delete, :data => { :confirm => '确定删除吗？' }
            %br
          = link_to '添加图片轮播', new_admin_slide_path
      #content2.hide{name:"content"}
        正在前往管理员首页...
