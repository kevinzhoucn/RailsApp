  #adminnav{style:""}
    %ul.horizontal
      %li
        快速导航:
      %li
        %a{href:"/admin"} 管理员首页
        >
      %li 公司简介管理
  #basic-accordian
    #left{style:"float:left;width:25%;"}
      %ul#menu-header
        %li.current{name:"leftlist",onclick:"tabbing(this)"} 公司简介
        %li{name:"leftlist",onclick:"tabbing(this);"}
          %a{href:"/admin",style:"display:block;width:100%"} 返回管理员首页
