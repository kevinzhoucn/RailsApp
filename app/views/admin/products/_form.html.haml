= simple_form_for([:admin, @product]) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title, label:"产品名称"
    %h2 产品标准
    = f.text_area :standards, :rows => 10, :cols => 90
    %h2 产品描述
    = f.text_area :description,:rows => 10, :cols => 90
    = f.association :producttype, label: "Category", include_blank: false

  .form-inputs
    = f.input :materials_img, as: :file
    = f.input :dimensions_img, as: :file
    = f.input :drawing1_img, as: :file
    = f.input :drawing2_img, as: :file
    = f.input :photo, as: :file

  .form-actions
    = f.button :submit
