.container.container-fluid{style:"margin-top:5px"}
  .col-md-2#categories.pageblock{style:"background-color:#2E86BD;"}
    .blockhead Product Categories
    %ul.nav.nav-tabs.nav-stacked
      %li.active
        = link_to "All Products"
      - @producttypes.each do |type|
        %li
          =link_to type.name + 's', product_valve_path(type.id)
  #thumbs{style:"margin-left:3px;float:left;width:79.4%;"}
    .blockhead Our products
    - @products.each do |product|
      .col-sm-3.col-md-2{style:"background-color:#EEE;margin:20px"}
        %img{src:"#{root_url}img/products/ballvalve.jpg",alt:"..."}
        %h4
          =product.title
          =product.description

        =link_to "Details",product,{class:"btn btn-info"}