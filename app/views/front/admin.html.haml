/*Body*/
.generalcontainer#adminbody{style:"height:600px;"}
  #adminnav{style:""}
    %ul.horizontal
      %li
        快速导航:
      %li
        管理员首页

  #basic-accordian
    #left{style:"float:left;width:25%;"}
      #test1-header.accordion_headings.header_highlight
        首页管理
      #test2-header.accordion_headings
        公司简介管理
      #test3-header.accordion_headings
        产品管理
      #test4-header.accordion_headings
        应用范围和设备管理
      #test5-header.accordion_headings
        联系信息管理
    /end of left
    #right{style:"float:left;width:73%;margin-right:1px"}
      #test1-content
        .accordion_child#homepage
          %h2 首页栏目管理
          %hr
          #homepageitems
            %ul.horizontal
              %li
                %a{href:"/admin/news/"} 管理新闻标题 <br />
              %li
                %a{href:"/admin/slides/"} 管理图片轮播
      #test2-content
        .accordion_child#companyinfo
          %h2 公司信息管理
          %hr
          #companypicNintro
            - if not @company.nil?
              %h3 公司图片(小)
              =image_tag @company.avatar.url(:small)
            - else
              %p 
                %b 无公司简介信息
              %p 
                %b 请先添加公司简介
            - if not @company.nil?
              #companyintro{style:"height:auto"}
                #companyintrotitle
                  %h3 公司简介文本
                = @company.content.html_safe
              =link_to '编辑公司信息', edit_admin_company_path(@company)
      #test3-content
        .accordion_child
          %h2 产品管理
          %hr
          #productitems
            =link_to "去产品管理页面", admin_products_path
            %hr
            快捷方式：
            = link_to '添加新产品', new_admin_product_path
      #test4-content
        .accordion_child
          %h2 应用范围和设备
          %hr
          %ul.horizontal
            %li
              %a 管理应用范围
            %li
              %a 管理设备信息
      #test5-content
        .accordion_child
          %h2 管理联系信息
          %hr
          =link_to "编辑联系人信息", edit_admin_contact_path(1)
/*Body*/
