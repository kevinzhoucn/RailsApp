/*Body*/
.generalcontainer#adminbody
  #adminnav{style:""}
    %ul.horizontal
      %li
        快速导航:
      %li
        管理员首页

  #basic-accordian
    #left{style:"float:left;width:25%;"}
      %ul#menu-header
        %li.current{name:"leftlist",onclick:"tabbing(this)"} 首页管理
        %li{name:"leftlist",onclick:"tabbing(this)"} 公司简介管理
        %li{name:"leftlist",onclick:"tabbing(this)"} 产品管理
        %li{name:"leftlist",onclick:"tabbing(this)"} 应用范围和设备管理
        %li{name:"leftlist",onclick:"tabbing(this)"} 联系信息管理

    #right{style:"float:left;width:73%;margin-right:1px"}
      #content1.show{name:"content"}
        %h2 首页栏目管理
        %hr
        #homepageitems
          %ul.horizontal
            %li
              %a{href:"/admin/news/"} 管理新闻标题 <br />
            %li
              %a{href:"/admin/slides/"} 管理图片轮播
      #content2.hide{name:"content"}
        %h2 公司信息管理
        %hr
        #companypicNintro
          - if not @company.nil?
            %h3 公司图片
            =image_tag @company.avatar.url(:thumb)
          - else
            %p 
              %b 无公司简介信息
            %p 
              %b 请先
              =link_to '添加公司简介', new_admin_company_path
          - if not @company.nil?
            #companyintro{style:"height:auto"}
              #companyintrotitle
                %h3 公司简介文本
              = @company.content.html_safe
            =link_to '编辑公司信息', edit_admin_company_path(@company)
      #content3.hide{name:"content"}
        %h2 产品管理
        %hr
        #productitems
          %ul.horizontal
            %li
              =link_to "产品列表", admin_products_path
            %li
              = link_to '添加新产品', new_admin_product_path
      #content4.hide{name:"content"}
        %h2 应用范围和设备
        %hr
        %ul.horizontal
          %li
            =link_to '管理应用范围', admin_applications_path
          %li
            =link_to '管理设备信息', admin_equipment_index_path
      #content5.hide{name:"content"}
        %h2 管理联系信息
        %hr
          =link_to "编辑联系人信息", edit_admin_contact_path(1)
/*Body*/
