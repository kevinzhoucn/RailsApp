#top-container.container-fluid
  .col-md-12{style:"margin-top:5px;padding:5px"}
    %script{src:"#{root_url}js/sliders/startfullwidthslider.js"}
    #slider1_container{style:"position:relative;margin:0 auto;top:0px;left:0px;width:1300px;height:500px;overflow:hidden;"}
      /slide container
      #slidecontainer{u:"slides",style:"cursor:move;position:absolute;left:0px;top:0px;width:1300px;height:500px;overflow:hidden;"}
        #slide1
          %img{u:"image",src:"#{root_url}img/blue.jpg"}
          .innertitle{style:"position: absolute; width:480px;height:120px;top:30px;left:30px;padding:5px;text-align: left; line-height: 60px; text-transform: uppercase; font-size: 50px;color: #FFFFFF;"}
            English Contact
          .innercontent{style:"position: absolute; width: 480px; height: 120px; top: 300px; left: 30px; padding: 5px;text-align: left; line-height: 36px; font-size: 30px;color: #FFFFFF;"}
            Email:
            =@contact.english_email
            %br
            Mobile:
            =@contact.english_mobile
            %br
            Skype:
            =@contact.english_skype
        #slide2
          %img{u:"image",src:"#{root_url}img/red.jpg"}
          .innertitle{style:"position: absolute; width:480px;height:120px;top:30px;left:30px;padding:5px;text-align: left; line-height: 60px; text-transform: uppercase; font-size: 50px;color: #FFFFFF;"}
            Russian Contact
          .innercontent{style:"position: absolute; width: 480px; height: 120px; top: 300px; left: 30px; padding: 5px;text-align: left; line-height: 36px; font-size: 30px;color: #FFFFFF;"}
            Email:
            =@contact.russian_email
            %br
            Mobile:
            =@contact.russian_mobile
            %br
            Skype:
            =@contact.russian_skype
        #slide3
          %img{u:"image",src:"#{root_url}img/purple.jpg"}
          .innertitle{style:"position: absolute; width:480px;height:120px;top:30px;left:30px;padding:5px;text-align: left; line-height: 60px; text-transform: uppercase; font-size: 50px;color: #FFFFFF;"}
            We can also be reached...
          .innercontent{style:"position: absolute; width: 480px; height: 120px; top: 300px; left: 30px; padding: 5px;text-align: left; line-height: 36px; font-size: 30px;color: #FFFFFF;"}
            Website:
            =link_to 'http://'+@contact.website, root_url,{style:"color:#2E86BD"}
            %br
            Tel/Fax: 
            = @contact.tel
