.page-content
  .container.container-fluid{style:"margin-top:5px"}
    #containerleft.col-md-2{style:"background-color:#015EA4;"}
      %h3{style:"padding-left:6px;color:#EFEFEF"} Product Categories
      %ul.nav.nav-tabs.nav-stacked
        %li.active
          =link_to 'All Products', front_product_path
        %li
          =link_to 'Ball Valves', front_product_ballvalve_path
        %li
          =link_to 'Check Valves', front_product_checkvalve_path
        %li
          =link_to 'Globe Valves', front_product_globevalve_path
        %li
          =link_to 'Gate Valves', front_product_gatevalve_path
        %li
          %form.navbar-form.navbar-left{role:"search",style:"padding:1px"}
            .form-group
              %input.form-control{type:"text",placeholder:"Search for a product"}
            %button.btn.btn-default{type:"submit"} Go
    #containerright.col-md-9
      .panel.panel-info
        .panel-heading
          %h3.panel-subject All Products
        .panel-body{style:"background-color:#EFEFEF"}
          .col-md-3{style:"margin-left:5%;margin-right:0px"}
            .thumbnail
              %img{src:"#{root_url}img/products/ballvalve.jpg",alt:"..."}
              .caption
                %h3 Ball Valve
                %font{style:"font-size:80%"}
                  Size: NPS 1/2" - 56"
                  %br
                  Pressure: Class 150-2500 LB
                %p{align:"right"}
                  =link_to 'View Details', front_product_ballvalve_path, {class:"btn btn-info", role: "button"}
                  
          .col-md-3{style:"margin-left:5%;margin-right:0px"}
            .thumbnail
              %img{src:"#{root_url}img/products/gatevalve.jpg",alt:"..."}
              .caption
                %h3 Gate Valve
                %font{style:"font-size:80%"}
                  Size: NPS 1/2" - 48"
                  %br
                  Pressure: Class 150-2500 LB
                %p{align:"right"}
                  =link_to 'View Details', front_product_gatevalve_path, {class:"btn btn-info", role: "button"}
          .col-md-3{style:"margin-left:5%;margin-right:0px"}
            .thumbnail
              %img{src:"#{root_url}img/products/globevalve.jpg",alt:"..."}
              .caption
                %h3 Globe Valve
                %font{style:"font-size:80%"}
                  Size: NPS 1/2" - 16"
                  %br
                  Pressure: Class 150-2500 LB
                %p{align:"right"}
                  =link_to 'View Details', front_product_globevalve_path, {class:"btn btn-info", role: "button"}
          .col-md-3{style:"margin-left:5%;margin-right:0px"}
            .thumbnail
              %img{src:"#{root_url}img/products/Checkvalve.jpg",alt:"..."}
              .caption
                %h3 Check Valve
                %font{style:"font-size:80%"}
